generator client {
  provider = "prisma-client"
  output   = "../../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Categories {
  WORK
  PERSONAL
  URGENT
}

model Task {
  id        String     @id @default(uuid())
  title     String
  category  Categories
  completed Boolean?   @default(false)
  dueDate   String?
  notes     String

  createdAt DateTime @default(now())
}
